
<div id="full_table">
  <h1>Premier League</h1>
    <div class="diff_stats_links">
      <ul>
        <li><%#= link_to "Overview", team_overwiev, remote: true %></li>
        <li><%#= button_to "Offensive", teams_team_offensive_path, remote: true %></li>
        <li><%#= link_to "Deffensive", @teams, remote: true %></li>
        <li><%#= link_to "Booking", @teams, remote: true %></li>
        <li><%#= link_to "Form", @teams, remote: true %></li>
      </ul>
    </div>
  <div id="change_target">
    <%= render "team_overwiev" %>
  </div>
</div>

<div id=table_players>
  <h2>Players</h2>
    <div class="diff_stats_links">
      <ul>
        <li>Offensive</li>
        <li>Deffensive</li>
        <li>Booking</li>
        <li>Form</li>
      </ul>
    </div>
  <table>
    <tr>
      <th>Player</th>
      <th>Goals</th>
      <th>Assists</th>
    </tr>

    <% @players.order(goals_scored: :desc, assists: :desc).each do |player| %>
      <tr>
        <td><%= player.full_name %></td>
        <td><%= player.goals_scored %></td>
        <td><%= player.assists %></td>
      </tr>
    <% end %>
  </table>
</div>

<div id=table_matches>
  <h2>Latest games</h2>
  <table>
    <tr>
      <th>Round</th>
      <th>Date</th>
      <th>VS</th>
      <th>Result</th>
    </tr>

    <% @matches.order(round: :desc, kick_off: :desc).each do |match| %>
      <tr>
        <% if match.was_home == "True" %>
          <td><%= match.round %></td>
          <td><%= match.kick_off %></td>
          <td><%= match.team_name %>-<%= match.opp_team_name %></td>
          <td><%= match.team_h_score %>:<%= match.team_a_score %></td>
        <% end %>
      </tr>
    <% end %>
  </table>
</div>
