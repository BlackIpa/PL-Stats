<h1>All teams list</h1>

<table>
  <tr>
    <th>Team</th>
    <th>Stadium</th>
    <th>Stadium Capacity</th>
    <th>Points</th>
    <th>Matches</th>
    <th>Won</th>
    <th>Draws</th>
    <th>Lost</th>
    <th>Scored</th>
    <th>Conceded</th>
    <th>Goals Difference</th>
    <th>Passes Success</th>
    <th>PPG</th>
    <th>Details</th>
  </tr>

  <% @teams.each do |team| %>
    <tr>
      <td><%= team.team_name %></td>
      <td><%= team.stadium %></td>
      <td><%= team.stadium_capacity %></td>
      <td><%= team.points %></td>
      <td><%= team.games_played %></td>
      <td><%= team.won %></td>
      <td><%= team.draws %></td>
      <td><%= team.lost %></td>
      <td><%= team.goals_scored %></td>
      <td><%= team.goals_conceded %></td>
      <td><%= team.goals_diff %></td>
      <td><%= team.passes_success %></td>
      <td><%= team.points_per_game %></td>
      <td><%= link_to 'Show', team_path(team) %></td>
    </tr>
  <% end %>
</table>
