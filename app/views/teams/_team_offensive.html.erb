<table>
  <tr>
    <th>Team</th>
    <th>Points</th>
    <th>Goals Scored</th>
    <th>Penalties</th>
    <th>Penalties Scored</th>
    <th>Passes Success Rate</th>
    <th>Offsides</th>
    <th>Missed</th>
    <th>Dribbles</th>
  </tr>

  <% teams.order(points: :desc).each do |team| %>
    <tr>
      <td><%= link_to team.team_name, team_path(team) %></td>
      <td><%= team.points %></td>
      <td><%= team.goals_scored %></td>
      <td>ND</td>
      <td>ND</td>
      <td><%= team.passes_success %></td>
      <td><%= team.offside %></td>
      <td><%= team.target_missed %></td>
      <td><%= team.dribbles %></td>
    </tr>
  <% end %>
</table>
