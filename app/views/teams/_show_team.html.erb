<h1><%= @team.team_name %></h1>
<p><%= link_to 'Back', teams_path %></p>

<div class="row" align="center">
  <div class="col-4"></div>
  <div class="col-4">
    <table class="table table-striped table-inverse">
      <tr>
        <th>Stadium</th>
        <th>Capacity</th>
      </tr>
      <tr>
        <td><%= @team.stadium %></td>
        <td><%= @team.stadium_capacity %></td>
      </tr>
    </table>
  </div>
  <div class="col-4"></div>
</div>
<!-- OVERWIEV -->
<div class="row">
  <div class="col-2"></div>
  <div class="col-8">
    <table class="table table-striped table-inverse">
      <tr>
        <th>Matches</th>
        <th>Points</th>
        <th>Won</th>
        <th>Draws</th>
        <th>Lost</th>
        <th>Scored</th>
        <th>Conceded</th>
      </tr>
      <tr>
        <td><%= @team.games_played %></td>
        <td><%= @team.points %></td>
        <td><%= @team.won %></td>
        <td><%= @team.draws %></td>
        <td><%= @team.lost %></td>
        <td><%= @team.goals_scored %></td>
        <td><%= @team.goals_conceded %></td>
      </tr>
    </table>
  </div>
  <div class="col-2"></div>
</div>
<!-- OFFENSIVE -->
<div class="row">
  <div class="col-2"></div>
  <div class="col-8">
    <table class="table table-striped table-inverse">
      <tr>
        <th>Goals Scored</th>
        <th>GS per Game</th>
        <th>Penalties</th>
        <th>Penalties Scored</th>
        <th>Passes Success Rate</th>
        <th>Offsides</th>
        <th>Missed</th>
        <th>Dribbles</th>
      </tr>
      <tr>
        <td><%= @team.goals_scored %></td>
        <td><%= @team.goals_scored / @team.games_played %></td>
        <td>ND</td>
        <td>ND</td>
        <td><%= @team.passes_success %></td>
        <td><%= @team.offside %></td>
        <td><%= @team.target_missed %></td>
        <td><%= @team.dribbles %></td>
      </tr>
    </table>
  </div>
  <div class="col-2"></div>
</div>
<!-- DEFFENSIVE -->
<div class="row">
  <div class="col-2"></div>
  <div class="col-8">
    <table class="table table-striped table-inverse">
      <tr>
        <th>Goals Conceded</th>
        <th>GC per Game</th>
        <th>Tackles</th>
        <th>Recoveries</th>
        <th>CBI</th>
        <th>Clean Sheets</th>
        <th>Saves</th>
        <th>Penalties Conceded</th>
        <th>Penalties Saved</th>
      </tr>
      <tr>
        <td><%= @team.goals_conceded %></td>
        <td><%= @team.goals_conceded / @team.games_played %></td>
        <td><%= @team.tackles %></td>
        <td><%= @team.recoveries %></td>
        <td><%= @team.clearances_blocks_interceptions %></td>
        <td><%= @team.clean_sheets %></td>
        <td><%= @team.saves %></td>
        <td><%= @team.penalties_conceded %></td>
        <td><%= @team.penalties_saved %></td>
      </tr>
    </table>
  </div>
  <div class="col-2"></div>
</div>
<!-- BOOKING -->
<div class="row">
  <div class="col-2"></div>
  <div class="col-8">
    <table class="table table-striped table-inverse">
      <tr>
        <th>Fouls</th>
        <th>Own Goals</th>
        <th>Yellow Cards</th>
        <th>Red Cards</th>
        <th>Penalties Against</th>
        <th>Goals after errors</th>
        <th>Errors leading to goal attempt</th>
      </tr>
      <tr>
        <td><%= @team.fouls %></td>
        <td><%= @team.own_goals %></td>
        <td><%= @team.yellow_cards %></td>
        <td><%= @team.red_cards %></td>
        <td><%= @team.penalties_saved + @team.penalties_conceded %></td>
        <td><%= @team.errors_leading_to_goal %></td>
        <td><%= @team.errors_leading_to_goal_attempt %></td>
      </tr>
    </table>
  </div>
  <div class="col-2"></div>
</div>
