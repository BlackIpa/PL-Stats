<table class="table sts_table team_table">
  <tr>
    <th class="alg_left">Team</th>
    <th><abbr title="Points">PTS</abbr></th>
    <th><abbr title="Matches Played">P</abbr></th>
    <th><abbr title="Won">W</abbr></th>
    <th><abbr title="Draw">D</abbr></th>
    <th><abbr title="Lost">L</abbr></th>
    <th><abbr title="Goals For">GF</abbr></th>
    <th><abbr title="Goals Against">GA</abbr></th>
    <th><abbr title="Goals Difference">GD</abbr></th>
    <th><abbr title="Points per Game">PPG</abbr></th>
  </tr>

  <% teams.order(points: :desc).each do |team| %>
    <tr>
      <td class="alg_left"><%= link_to team.team_name, team_path(team) %></td>
      <td><%= team.points %></td>
      <td><%= team.games_played %></td>
      <td><%= team.won %></td>
      <td><%= team.draws %></td>
      <td><%= team.lost %></td>
      <td><%= team.goals_scored %></td>
      <td><%= team.goals_conceded %></td>
      <td><%= team.goals_diff > 0 ? "+" : "" %><%= team.goals_diff %></td>
      <td><%= team.points_per_game %></td>
    </tr>
  <% end %>
</table>
