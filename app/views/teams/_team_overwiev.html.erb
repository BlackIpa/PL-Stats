<table class="table table-striped table-inverse">
  <tr>
    <th>Team</th>
    <th>Stadium</th>
    <th>Capacity</th>
    <th>Points</th>
    <th>Matches</th>
    <th>Won</th>
    <th>Draws</th>
    <th>Lost</th>
    <th>Scored</th>
    <th>Conceded</th>
    <th>Goals Difference</th>
    <th>PPG</th>
  </tr>

  <% teams.order(points: :desc).each do |team| %>
    <tr>
      <td><%= link_to team.team_name, team_path(team) %></td>
      <td><%= team.stadium %></td>
      <td><%= team.stadium_capacity %></td>
      <td><%= team.points %></td>
      <td><%= team.games_played %></td>
      <td><%= team.won %></td>
      <td><%= team.draws %></td>
      <td><%= team.lost %></td>
      <td><%= team.goals_scored %></td>
      <td><%= team.goals_conceded %></td>
      <td><%= team.goals_diff %></td>
      <td><%= team.points_per_game %></td>
    </tr>
  <% end %>
</table>
