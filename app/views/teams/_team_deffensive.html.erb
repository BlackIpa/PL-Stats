<table class="table sts_table team_table">
  <tr>
    <th class="alg_left">Team</th>
    <th><abbr title="Points">PTS</abbr></th>
    <th><abbr title="Goals Against">GA</abbr></th>
    <th><abbr title="Goals Against per Game">GPG</abbr></th>
    <th><abbr title="Tackles">TC</abbr></th>
    <th><abbr title="Clean Sheets">CS</abbr></th>
    <th><abbr title="Saves">SV</abbr></th>
    <th><abbr title="Penalties Conceded">PC</abbr></th>
    <th><abbr title="Penalties Saved">PS</abbr></th>
  </tr>

  <% teams.order(points: :desc).each do |team| %>
    <tr>
      <td class="alg_left"><%= link_to team.team_name, team_path(team) %></td>
      <td><%= team.points %></td>
      <td><%= team.goals_conceded %></td>
      <td><%= team.goals_conceded / team.games_played %></td>
      <td><%= team.tackles %></td>
      <td><%= team.clean_sheets %></td>
      <td><%= team.saves %></td>
      <td><%= team.penalties_conceded %></td>
      <td><%= team.penalties_saved %></td>
    </tr>
  <% end %>
</table>
