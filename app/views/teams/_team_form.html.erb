<table>
  <tr>
    <th>Team</th>
    <th>Points</th>
    <th>Points per Game</th>
    <th>Won</th>
    <th>Draw</th>
    <th>Lost</th>
    <th>Goals Scored</th>
    <th>Goals Conceded</th>
    <th>Clean Sheets</th>
  </tr>

  <% teams.order(points: :desc).each do |team| %>
    <tr>
      <td><%= link_to team.team_name, team_path(team) %></td>
      <td><%= team.points %></td>
      <td><%= team.points %></td>
      <td><%= team.won %></td>
      <td><%= team.draws %></td>
      <td><%= team.lost %></td>
      <td><%= team.goals_scored %></td>
      <td><%= team.goals_conceded %></td>
      <td><%= team.clean_sheets %></td>
    </tr>
  <% end %>
</table>
