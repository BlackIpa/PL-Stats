<h2>Matches</h2>
<table class="table sts_table">
  <tr>
    <th>Kick Off</th>
    <th>Home</th>
    <th>Away</th>
    <th>Result</th>
    <th>Points</th>
    <th>Bouns Points</th>
    <th>Goals</th>
    <th>Assists</th>
    <th>Passes Success</th>
  </tr>

  <% @player.player_matches.each do |player_match| %>
    <tr>
      <td><%= player_match.kickoff_time_formatted %></td>

      <% if player_match.was_home = "True" %>
        <td><%= player_match.team_name %></td>
        <td><%= player_match.opp_team_name %></td>
      <% else %>
        <td><%= player_match.opp_team_name %></td>
        <td><%= player_match.team_name %></td>
      <% end %>
      <td><%= player_match.team_h_score %>:<%= player_match.team_a_score %></td>
      <td><%= player_match.total_points %></td>
      <td><%= player_match.bonus %></td>
      <td><%= player_match.goals_scored %></td>
      <td><%= player_match.assists %></td>
      <td><%= player_match.passes_success %></td>
    </tr>
  <% end %>
</table>
