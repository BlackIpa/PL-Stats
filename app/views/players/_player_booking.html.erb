<table class="table sts_table">
  <tr>
    <th class="alg_left">Player</th>
    <th>Position</th>
    <th>Number</th>
    <th>Team</th>
    <th>Fouls</th>
    <th>Own Goals</th>
    <th>Yellow Cards</th>
    <th>Red Cards</th>
    <th><abbr title="Errors leading to goal">EG</abbr></th>
    <th><abbr title="Penalties Missed">PM</abbr></th>
  </tr>

  <% players.order(yellow_cards: :desc, red_cards: :desc).each do |player| %>
    <tr>
      <td class="alg_left"><%=  link_to player.full_name, player_path(player) %></td>
      <% case player.position
      when 1 %><td class="alg_left">Golkeeper</td>
      <% when 2 %><td class="alg_left">Defender</td>
      <% when 3 %><td class="alg_left">Midfielder</td>
      <% when 4 %><td class="alg_left">Forward</td>
      <% end %>
      <td><%= player.squad_number %></td>
      <td class="alg_left"><%= player.team_name %></td>
      <td><%= player.fouls %></td>
      <td><%= player.own_goals %></td>
      <td><%= player.yellow_cards %></td>
      <td><%= player.red_cards %></td>
      <td><%= player.errors_leading_to_goal %></td>
      <td><%= player.penalties_missed %></td>
    </tr>
  <% end %>
</table>
