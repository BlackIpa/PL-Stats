<table>
  <tr>
    <th>Player</th>
    <th>Position</th>
    <th>Number</th>
    <th>Team</th>
    <th>Goals</th>
    <th>Assists</th>
    <th>Chances Created</th>
    <th>Passes Success</th>
    <th>Offsides</th>
    <th>Shots missed</th>
    <th>Dribbles</th>
    <th>Tackled</th>
  </tr>

  <% players.order(goals_scored: :desc).each do |player| %>
    <tr>
      <td><%=  link_to player.full_name, player_path(player) %></td>
      <% case player.position
      when 1 %><td>Golkeeper</td>
      <% when 2 %><td>Defender</td>
      <% when 3 %><td>Midfielder</td>
      <% when 4 %><td>Forward</td>
      <% end %>
      <td><%= player.squad_number %></td>
      <td><%= player.team_name %></td>
      <td><%= player.goals_scored %></td>
      <td><%= player.assists %></td>
      <td><%= player.big_chances_created %></td>
      <td><%= player.passes_success %></td>
      <td><%= player.offside %></td>
      <td><%= player.target_missed %></td>
      <td><%= player.dribbles %></td>
      <td><%= player.tackled %></td>
    </tr>
  <% end %>
</table>
